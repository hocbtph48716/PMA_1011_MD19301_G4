<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#F8F9FA">

    <!-- Header with back button and title -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingBottom="16dp">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_back"
            android:contentDescription="Back"
            android:background="?attr/selectableItemBackgroundBorderless" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:text="Sửa đơn hàng"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#212121" />
    </LinearLayout>

    <!-- Order ID -->
    <TextView
        android:id="@+id/tvOrderId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Order ID"
        android:textColor="#6C757D"
        android:textSize="14sp"
        android:layout_marginBottom="8dp" />

    <!-- Order Date -->
    <EditText
        android:id="@+id/etOrderDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Order Date"
        android:background="@drawable/bg_edittext"
        android:padding="12dp"
        android:layout_marginBottom="16dp"
        android:inputType="date" />

    <!-- Order Status -->
    <EditText
        android:id="@+id/etOrderStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Order Status"
        android:background="@drawable/bg_edittext"
        android:padding="12dp"
        android:layout_marginBottom="16dp" />

    <!-- Total Price -->
    <EditText
        android:id="@+id/etTotalPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Total Price"
        android:background="@drawable/bg_edittext"
        android:padding="12dp"
        android:layout_marginBottom="16dp"
        android:inputType="numberDecimal" />

    <!-- Payment Method -->
    <EditText
        android:id="@+id/etPaymentMethod"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Payment Method"
        android:background="@drawable/bg_edittext"
        android:padding="12dp"
        android:layout_marginBottom="24dp" />

    <!-- Save Button -->
    <Button
        android:id="@+id/btnSaveOrder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Save Order"
        android:textColor="#FFFFFF"
        android:backgroundTint="#007BFF"
        android:paddingVertical="12dp"
        android:textSize="16sp" />
</LinearLayout>